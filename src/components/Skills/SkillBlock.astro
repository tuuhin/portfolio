---
export interface Props {
  name: string;
  imageSrc: string;
}

import Image from "astro/components/Image.astro";
const { name, imageSrc } = Astro.props;
---

<div
  class="p-2 flex flex-col items-center space-y-6 bg-lime-200 rounded-xl hover:shadow-lg transition-all ease-in-out duration-300"
>
  <Image
    src={imageSrc}
    alt={name}
    class={"aspect-square w-28"}
    width={112}
    height={112}
    loading={"lazy"}
  />
  <p class="text-xl font-poppins text-center font-semibold">{name}</p>
</div>
